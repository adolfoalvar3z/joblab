<div class="container">
  <h2 class="text-center">¿Olvidaste tu contraseña?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "card p-3" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <div class="d-grid">
      <%= f.submit "Enviar instrucciones para restablecer contraseña", class: "btn btn-warning" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
