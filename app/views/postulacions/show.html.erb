<div class="container">
  <div class="mb-3">
    <p class="text-success"><%= notice %></p>
  </div>

  <%= render @postulacion %>

  <div class="mt-4">
    <div class="btn-group">
      <%= link_to "Editar esta postulación", edit_postulacion_path(@postulacion), class: "btn btn-primary" %>
      <%= link_to "Volver a postulaciones", postulacions_path, class: "btn btn-secondary" %>
    </div>

    <%= button_to "Eliminar esta postulación", @postulacion, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger", form: { class: "d-inline-block" } %>
  </div>
</div>
