<!-- app/views/users/edit.html.erb -->
<div class="container mt-5">
  <h2>Editar Usuario</h2>
  <%= form_for(@user, url: user_path(@user), method: :patch) do |f| %>
    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :nombre %>
      <%= f.text_field :nombre, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :telefono %>
      <%= f.text_field :telefono, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :direccion %>
      <%= f.text_field :direccion, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :cargo %>
      <%= f.text_field :cargo, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Guardar Cambios', class: 'btn btn-primary my-3' %>
    </div>
  <% end %>
  <%= link_to 'Cancelar', user_path(@user), class: 'btn btn-secondary' %>
</div>
